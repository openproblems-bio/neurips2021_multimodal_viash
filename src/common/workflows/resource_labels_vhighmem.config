process {
  // very high memory high time
  withLabel: lowcpu { cpus = 30 }
  withLabel: midcpu { cpus = 30 }
  withLabel: highcpu { cpus = 30 }
  withLabel: vhighcpu { cpus = 30 }
  withLabel: lowmem { memory = "105 GB" }
  withLabel: midmem { memory = "105 GB" }
  withLabel: highmem { memory = "105 GB" }
  withLabel: vhighmem { memory = "105 GB" }
  withLabel: lowtime { time = "1h" }
  withLabel: midtime { time = "1h" }
  withLabel: hightime { time = "1h" }
  withLabel: vhightime { time = "60m" }

  withLabel: gpu {
    maxForks = 1
    containerOptions = '--gpus all'
  }
}