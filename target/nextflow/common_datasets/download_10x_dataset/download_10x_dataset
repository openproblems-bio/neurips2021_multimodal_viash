  echo "Usage:   --output_rna output_rna.h5ad \\"
  echo "Usage:   --output_mod2 output_mod2.h5ad"
  echo "Options:"

  echo "   --id"
  echo "        type: string, required parameter"
  echo "        example: dyngen_dataset"
