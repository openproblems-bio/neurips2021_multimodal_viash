  docker.enabled = true
  docker.runOptions = "-i -v ${baseDir}:${baseDir}"
  process.container = "dataintuitive/viash"
  params {
    ari__input_prediction = "viash_no_value"
    ari__input_solution = "viash_no_value"
    ari__output = "viash_no_value"
    ari__debug = "false"
    id = ""
    testScript = "test_metric.py"
    testResources = [ "../../unit_tests/test_metric.py", "../../../../resources_test", "metric_meta_ari.tsv" ]
    ari {
      name = "ari"
      container = "joint_embedding_metrics_ari"
      containerTag = "1.1.1"
      containerRegistry = "openproblems"
      command = "ari"
      tests {
        isDefined = true
        testScript = "test_metric.py"
        testResources = [ "../../unit_tests/test_metric.py", "../../../../resources_test", "metric_meta_ari.tsv" ]
      }
      arguments {
        input_prediction {
          name = "input_prediction"
          otype = "--"
          required = true
          type = "file"
          direction = "Input"
          multiple = false
          multiple_sep = ":"
          value = "${params.ari__input_prediction}"
          example = "prediction.h5ad"
          description = "Prediction by a method"
        }
        input_solution {
          name = "input_solution"
          otype = "--"
          required = true
          type = "file"
          direction = "Input"
          multiple = false
          multiple_sep = ":"
          value = "${params.ari__input_solution}"
          example = "solution.h5ad"
          description = "Gold standard solution."
        }
        output {
          name = "output"
          otype = "--"
          required = true
          type = "file"
          direction = "Output"
          multiple = false
          multiple_sep = ":"
          value = "${params.ari__output}"
          example = "output.h5ad"
          description = "Metric scores by comparing the prediction to the gold standard solution."
        }
        debug {
          name = "debug"
          otype = "--"
          required = false
          type = "boolean"
          direction = "Input"
          multiple = false
          multiple_sep = ":"
          value = "${params.ari__debug}"
          dflt = "false"
          description = "Verbose output for debugging."
        }
      }
    }
  }