# initialise array
VIASH_POSITIONAL_ARGS=''

while [[ $# -gt 0 ]]; do
    case "$1" in
        -h|--help)
            ViashHelp
            exit
            ;;
        -v|--verbose)
            let "VIASH_VERBOSITY=VIASH_VERBOSITY+1"
            shift 1
            ;;
        -vv)
            let "VIASH_VERBOSITY=VIASH_VERBOSITY+2"
            shift 1
            ;;
        --verbosity)
            VIASH_VERBOSITY="$2"
            shift 2
            ;;
        --verbosity=*)
            VIASH_VERBOSITY="$(ViashRemoveFlags "$1")"
            shift 1
            ;;
        --version)
            echo "quality_control main_build"
            exit
            ;;
        --input_rna)
            VIASH_PAR_INPUT_RNA="$2"
            shift 2
            ;;
        --input_rna=*)
            VIASH_PAR_INPUT_RNA=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --input_mod2)
            VIASH_PAR_INPUT_MOD2="$2"
            shift 2
            ;;
        --input_mod2=*)
            VIASH_PAR_INPUT_MOD2=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --output_rna)
            VIASH_PAR_OUTPUT_RNA="$2"
            shift 2
            ;;
        --output_rna=*)
            VIASH_PAR_OUTPUT_RNA=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --output_mod2)
            VIASH_PAR_OUTPUT_MOD2="$2"
            shift 2
            ;;
        --output_mod2=*)
            VIASH_PAR_OUTPUT_MOD2=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --min_counts_per_gene)
            VIASH_PAR_MIN_COUNTS_PER_GENE="$2"
            shift 2
            ;;
        --min_counts_per_gene=*)
            VIASH_PAR_MIN_COUNTS_PER_GENE=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --min_counts_per_cell)
            VIASH_PAR_MIN_COUNTS_PER_CELL="$2"
            shift 2
            ;;
        --min_counts_per_cell=*)
            VIASH_PAR_MIN_COUNTS_PER_CELL=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --keep_genes)
            if [ -z "$VIASH_PAR_KEEP_GENES" ]; then
              VIASH_PAR_KEEP_GENES="$2"
            else
              VIASH_PAR_KEEP_GENES="$VIASH_PAR_KEEP_GENES:""$2"
            fi
            shift 2
            ;;
        --keep_genes=*)
            if [ -z "$VIASH_PAR_KEEP_GENES" ]; then
              VIASH_PAR_KEEP_GENES=$(ViashRemoveFlags "$1")
            else
              VIASH_PAR_KEEP_GENES="$VIASH_PAR_KEEP_GENES:"$(ViashRemoveFlags "$1")
            fi
            shift 1
            ;;
        *)  # positional arg or unknown option
            # since the positional args will be eval'd, can we always quote, instead of using ViashQuote
            VIASH_POSITIONAL_ARGS="$VIASH_POSITIONAL_ARGS '$1'"
            shift # past argument
            ;;
    esac
done

