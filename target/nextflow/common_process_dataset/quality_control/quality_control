eval set -- $VIASH_POSITIONAL_ARGS



# check whether required parameters exist
if [ -z "$VIASH_PAR_INPUT_RNA" ]; then
  ViashError '--input_rna' is a required argument. Use "--help" to get more information on the parameters.
  exit 1
fi
