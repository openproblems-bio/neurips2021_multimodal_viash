  "input_mod2" = $( if [ ! -z ${VIASH_PAR_INPUT_MOD2+x} ]; then echo "'$VIASH_PAR_INPUT_MOD2'"; else echo NULL; fi ),
  "output_mod1" = $( if [ ! -z ${VIASH_PAR_OUTPUT_MOD1+x} ]; then echo "'$VIASH_PAR_OUTPUT_MOD1'"; else echo NULL; fi ),
