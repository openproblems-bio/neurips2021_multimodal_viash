# change file ownership
function viash_perform_chown {
  
  if [ ! -z "$VIASH_PAR_OUTPUT_RNA" ]; then
    eval docker run --entrypoint=chown -i --rm $VIASH_EXTRA_MOUNTS openproblems/common_datasets_download_10x_dataset:1.2.0 "$(id -u):$(id -g)" --silent --recursive "$VIASH_PAR_OUTPUT_RNA"
  fi
  if [ ! -z "$VIASH_PAR_OUTPUT_MOD2" ]; then
    eval docker run --entrypoint=chown -i --rm $VIASH_EXTRA_MOUNTS openproblems/common_datasets_download_10x_dataset:1.2.0 "$(id -u):$(id -g)" --silent --recursive "$VIASH_PAR_OUTPUT_MOD2"
  fi
}
