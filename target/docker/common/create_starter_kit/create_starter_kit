    eval docker run --entrypoint=chown -i --rm $VIASH_EXTRA_MOUNTS openproblems/common_create_starter_kit:main_build "$(id -u):$(id -g)" --silent --recursive "$VIASH_PAR_OUTPUT_DIR"
  fi
}
